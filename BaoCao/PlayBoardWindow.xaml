<Window x:Class="BaoCao.PlayBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaoCao"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="PlayBoardWindow" Height="700" Width="900">
    <DockPanel>

        <ToolBarTray DockPanel.Dock="Top" >
            <ToolBar Name="_toolBar">
                <Button Height="40" FontSize="21" Margin="10,0,0,0" >Home</Button>
                <Button Height="40" FontSize="21" Margin="10,0,0,0" >Prev</Button>
                <Button Height="40" FontSize="21" Margin="10,0,0,0" >Next</Button>
                <Button Height="40" FontSize="21" Margin="10,0,0,0" >Reset</Button>
                <Button Height="40" FontSize="21" Margin="10,0,0,0" Click="Solve_ButtonClickEvent" >Solve</Button>
                <Button Height="40" FontSize="21" Margin="10,0,0,0" >Help</Button>
            </ToolBar>
        </ToolBarTray>

        <Canvas x:Name="_canvasGameBoard" Background="LightSkyBlue">
            
